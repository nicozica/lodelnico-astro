---
interface Photo {
  id: string | number;
  title: string;
  src: string;
  alt: string;
  date: string;
  postId: number;
  postTitle: string;
}

const { photos = [] }: { photos?: Photo[] } = Astro.props;
---

<div class="photo-grid">
  {photos.map((photo, index) => (
    <div class="photo-item">
      <img 
        src={photo.src} 
        alt={photo.alt}
        loading="lazy"
      />
    </div>
  ))}
</div>

<style>
  @import '../styles/components/photo-grid.css';
</style>
