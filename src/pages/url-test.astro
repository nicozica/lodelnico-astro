---
// Simple URL parameter test
const url = new URL(Astro.request.url);
const pageParam = url.searchParams.get('page');
const allParams = url.searchParams.toString();

console.log('Simple URL Test:', {
  fullUrl: Astro.request.url,
  searchParams: allParams,
  pageParam: pageParam,
  urlPathname: url.pathname,
  urlSearch: url.search
});
---

<html>
<head>
  <title>URL Parameter Test</title>
</head>
<body>
  <h1>URL Parameter Test</h1>
  
  <div style="font-family: monospace; margin: 20px; padding: 20px; background: #f5f5f5;">
    <h2>Debug Info:</h2>
    <p><strong>Full URL:</strong> {Astro.request.url}</p>
    <p><strong>Pathname:</strong> {url.pathname}</p>
    <p><strong>Search:</strong> {url.search}</p>
    <p><strong>All Params:</strong> {allParams}</p>
    <p><strong>Page Param:</strong> {pageParam || 'null'}</p>
  </div>
  
  <div style="margin: 20px;">
    <h2>Test Links:</h2>
    <p><a href="/url-test?page=1">Test page=1</a></p>
    <p><a href="/url-test?page=2">Test page=2</a></p>
    <p><a href="/url-test?page=3">Test page=3</a></p>
    <p><a href="/url-test?page=2&other=hello">Test page=2&other=hello</a></p>
  </div>
</body>
</html>
