---
/* All comments in English */
import BaseLayout from '../layouts/BaseLayout.astro';

// Get the attempted path to show a helpful hint
const attempted = Astro.url?.pathname ?? '';

const pageTitle = 'Page not found';
const pageDesc  = 'The page you are looking for does not exist or was moved.';
---

<BaseLayout title={pageTitle} description={pageDesc} showHero={false}>
  <section class="stack">
    <h1 class="code">404</h1>
    <p class="lead">
      <!-- Friendly message with the requested path -->
      <!-- Keep it short and calm -->
      Esta página salió a caminar y no volvió.
    </p>
    <nav class="actions">
      <a class="btn" href="/1/">← Back to gallery</a>
      <a class="btn" href="/1/">View all photos</a>
    </nav>
  </section>

  <style>
    /* Minimal, framework-agnostic styles that blend in */
    .stack {
      min-height: 60vh;
      display: flex; flex-direction: column;
      align-items: center; justify-content: center;
      gap: 1rem; text-align: center; padding: 3rem 1rem;
    }
    .code { font-size: clamp(3rem, 8vw, 6rem); letter-spacing: .04em; }
    .lead { opacity: .85 }
    .btn {
      display: inline-block; padding: .75rem 1rem; border-radius: .75rem;
      border: 1px solid hsl(0 0% 85%); text-decoration: none;
    }
    .actions { display: flex; gap: .75rem; flex-wrap: wrap; justify-content: center; }
  </style>
</BaseLayout>
