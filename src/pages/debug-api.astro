---
let postsData = {};
let error = null;

try {
  const response = await fetch('https://lodelnico.com/wp-json/wp/v2/posts?per_page=3&_embed=wp:featuredmedia');
  if (!response.ok) {
    throw new Error(`HTTP error! status: ${response.status}`);
  }
  const posts = await response.json();
  postsData = {
    totalPosts: posts.length,
    posts: posts.map((post: any) => ({
      id: post.id,
      title: post.title.rendered.replace(/<[^>]*>/g, '').substring(0, 50),
      contentLength: post.content.rendered.length,
      hasFeaturedImage: !!post._embedded?.['wp:featuredmedia']?.[0],
      featuredImageUrl: post._embedded?.['wp:featuredmedia']?.[0]?.source_url?.substring(0, 50) + '...' || 'No featured image'
    }))
  };
} catch (err: any) {
  error = err.message;
}
---

<html>
<head>
  <title>WordPress API Debug</title>
</head>
<body>
  <h1>WordPress API Debug</h1>
  
  {error && (
    <div style="color: red;">
      <h2>Error:</h2>
      <p>{error}</p>
    </div>
  )}
  
  <h2>Raw Posts Data:</h2>
  <pre>{JSON.stringify(postsData, null, 2)}</pre>
  
  <p><a href="/debug">Ver debug procesado</a> | <a href="/">Volver a inicio</a></p>
</body>
</html>
