---
// Root redirect page - blank but using Astro layout
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title=""
  description="Redirecting to gallery"
  showHero={false}
>
  <!-- Immediate redirect via meta refresh (0 seconds) -->
  <meta http-equiv="refresh" content="0; url=/1/">
  
  <!-- JavaScript fallback for immediate redirect -->
  <script>
    window.location.replace('/1/');
  </script>
  
  <!-- Completely blank content - no flicker -->
  <style>
    body { 
      background: white !important;
    }
    .main-content {
      display: none !important;
    }
  </style>
</BaseLayout>
