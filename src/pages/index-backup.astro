---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/HeroClean.astro';
import type { PhotoItem } from '../types/photoblog';

// Import the photoblog data for the first page (9 items per page)
import photoblogData from '../data/photoblog.json';
const photos = photoblogData as PhotoItem[];

const photosPerPage = 9;
const currentPage = 1;
const totalPages = Math.ceil(photos.length / photosPerPage);

// Get the first 9 photos (page 1)
const startIndex = (currentPage - 1) * photosPerPage;
const endIndex = startIndex + photosPerPage;
const pagePhotos = photos.slice(startIndex, endIndex);

const hasNextPage = currentPage < totalPages;
const hasPrevPage = currentPage > 1;
---

<BaseLayout 
  title="Lo del Nico - Fotografía"
  description="Galería de fotografía personal de Nicolas desde Buenos Aires, Argentina."
>
  <Hero />
  
  <main class="photos-section">
    <!-- Photo Grid (3x3 layout) -->
    <div class="photo-grid">
      {pagePhotos.map((photo: PhotoItem) => (
        <div class="photo-item">
          <a href={photo.url} target="_blank" rel="noopener" class="photo-link">
            <img 
              src={photo.image} 
              alt={photo.title}
              loading="lazy"
              class="photo-img"
            />
            <div class="photo-caption">
              <h3 class="photo-title">{photo.title}</h3>
              <time class="photo-date">
                {new Date(photo.date).toLocaleDateString('es-ES', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
            </div>
          </a>
        </div>
      ))}
    </div>
    
    <!-- Pagination -->
    <div class="pagination">
      <span class="page-info">
        {currentPage.toString().padStart(2, '0')} / {totalPages.toString().padStart(2, '0')}
      </span>
      <div class="page-controls">
        {hasPrevPage && (
          <a href={`/${currentPage - 1}`} class="page-btn" aria-label="Página anterior">←</a>
        )}
        {hasNextPage && (
          <a href={`/${currentPage + 1}`} class="page-btn" aria-label="Página siguiente">→</a>
        )}
      </div>
    </div>
  </main>
<style>
  @import '../styles/layout/sections.css';
  @import '../styles/components/pagination.css';

  /* Photo Grid - Simple 3x3 layout */
  .photo-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 2rem;
  }

  .photo-item {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .photo-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .photo-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .photo-img {
    width: 100%;
    height: 280px;
    object-fit: cover;
    display: block;
  }

  .photo-caption {
    padding: 1.5rem;
  }

  .photo-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1e293b;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .photo-date {
    font-size: 0.875rem;
    color: #64748b;
    font-weight: 400;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .photo-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
      padding: 0 1.5rem;
    }
  }

  @media (max-width: 640px) {
    .photo-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 0 1rem;
    }
    
    .photo-img {
      height: 240px;
    }
    
    .photo-caption {
      padding: 1rem;
    }
  }
</style>

    .gallery-intro h2 {
      font-size: 2rem;
    }

    .gallery-intro p {
      font-size: 1.1rem;
    }

    .preview-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .preview-img {
      height: 180px;
    }
  }
