---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
}

const {
  title = 'lodelnico.com - Photography & Visual Stories',
  description = 'Personal photoblog featuring photography, visual stories and creative exploration by Nicolas.',
  image = '/og-image.jpg',
  noindex = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.url).href;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <meta name="author" content="Nicolas" />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- SEO -->
  {noindex && <meta name="robots" content="noindex, nofollow" />}
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={socialImageURL} />
  <meta property="og:site_name" content="lodelnico.com" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={socialImageURL} />
  
  <!-- Preload critical fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Critical CSS -->
  <style>
    :root {
      --color-background: #fafafa;
      --color-text: #1a1a1a;
      --color-text-light: #666;
      --color-accent: #0066cc;
      --color-border: #e5e5e5;
      --font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      --max-width: 1200px;
    }
    
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    body {
      font-family: var(--font-family);
      background-color: var(--color-background);
      color: var(--color-text);
      line-height: 1.6;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    .container {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 1rem;
    }
    
    @media (min-width: 768px) {
      .container {
        padding: 0 2rem;
      }
    }
  </style>
</head>
<body>
  <div class="site-wrapper">
    <header class="site-header">
      <nav class="container">
        <div class="nav-content">
          <a href="/" class="logo">lodelnico</a>
          <div class="nav-links">
            <a href="/1">Gallery</a>
            <a href="/about">About</a>
          </div>
        </div>
      </nav>
    </header>
    
    <main class="site-main">
      <slot />
    </main>
    
    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <p>&copy; 2025 Nicolas. All rights reserved.</p>
          <div class="footer-links">
            <a href="mailto:nicolas@lodelnico.com">Contact</a>
            <a href="/rss.xml">RSS</a>
          </div>
        </div>
      </div>
    </footer>
  </div>
  
  <style>
    .site-wrapper {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    .site-header {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      position: sticky;
      top: 0;
      z-index: 100;
      border-bottom: 1px solid var(--color-border);
    }
    
    .nav-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 4rem;
    }
    
    .logo {
      font-weight: 700;
      font-size: 1.5rem;
      color: var(--color-text);
      text-decoration: none;
      transition: color 0.2s ease;
    }
    
    .logo:hover {
      color: var(--color-accent);
    }
    
    .nav-links {
      display: flex;
      gap: 2rem;
    }
    
    .nav-links a {
      color: var(--color-text);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s ease;
    }
    
    .nav-links a:hover {
      color: var(--color-accent);
    }
    
    .site-main {
      flex: 1;
      padding: 2rem 0;
    }
    
    .site-footer {
      border-top: 1px solid var(--color-border);
      padding: 2rem 0;
      margin-top: 4rem;
      background: var(--color-background);
    }
    
    .footer-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .footer-content p {
      color: var(--color-text-light);
      font-size: 0.9rem;
    }
    
    .footer-links {
      display: flex;
      gap: 1.5rem;
    }
    
    .footer-links a {
      color: var(--color-text-light);
      text-decoration: none;
      font-size: 0.9rem;
      transition: color 0.2s ease;
    }
    
    .footer-links a:hover {
      color: var(--color-accent);
    }
    
    @media (max-width: 768px) {
      .nav-links {
        gap: 1rem;
      }
      
      .footer-content {
        text-align: center;
        flex-direction: column;
      }
    }
  </style>
</body>
</html>
